{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": 0,
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "arrow-spacing": 2,
        "block-scoped-var": 2,
        "block-spacing": 1,
        "brace-style": ["error", "1tbs"],
        "comma-spacing": 2,
        "curly": 2,
        "default-case": 2,
        "eqeqeq": 2,
        "jsx-quotes": [
            "error",
            "prefer-double"
        ],
        "func-style": 0,
        "lines-between-class-members": 1,
        "max-statements-per-line": ["error", {
            "max": 1
        }],
        "new-cap": [
            "error", {
                "capIsNew": true
            }
        ],
        "no-alert": 2,
        "no-duplicate-imports": 2,
        "no-empty-function": 2,
        "no-eq-null": 2,
        "no-extend-native": 2,
        "no-else-return": ["error", {
            "allowElseIf": false
        }],
        "no-implicit-coercion": 1,
        "no-lone-blocks": 2,
        "no-multi-spaces": ["error", {
            "ignoreEOLComments": true
        }],
        "no-multiple-empty-lines": 0,
        "no-proto": 2,
        "no-self-compare": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-throw-literal": 2,
        "no-trailing-spaces": 1,
        "no-useless-computed-key": 2,
        "no-useless-constructor": 2,
        "no-useless-rename": [
            "error", {
                "ignoreDestructuring": false,
                "ignoreImport": false,
                "ignoreExport": false
            }
        ],
        "no-console": 0,
        "no-var": 2,
        "no-useless-return": 2,
        "no-unneeded-ternary": 1,
        "no-whitespace-before-property": 1,
        "object-shorthand": 1,
        "object-curly-spacing": 0,
        "one-var-declaration-per-line": ["error", "always"],
        "prefer-const": 1,
        "prefer-destructuring": 0,
        "prefer-spread": 1,
        "quotes": [
            "error",
            "single", {
                "allowTemplateLiterals": true
            }
        ],
        "quote-props": [
            "error",
            "as-needed"
        ],
        "space-before-blocks": ["error", {
            "functions": "always",
            "keywords": "always",
            "classes": "always"
        }],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "space-in-parens": [
            1,
            "never"
        ],
        "switch-colon-spacing": 2,
        "template-curly-spacing": 2,
        "vars-on-top": 2,
        "yoda": 2,
        "indent": [
            "error",
            4
        ]
    }
}